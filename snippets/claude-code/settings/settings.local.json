{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git log:*)",
      "Bash(bd show:*)",
      "Bash(bd update:*)",
      "Bash(bd create:*)",
      "Bash(bd close:*)",
      "Bash(bd list:*)",
      "Bash(bd ready:*)",
      "Bash(bd sync:*)",
      "Bash(bd stats:*)",
      "Bash(bd dep:*)",
      "Bash(bd doctor:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ]
  }
}
